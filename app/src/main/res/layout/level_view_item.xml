<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickListener"
            type="com.example.memory_app.presentation.menuscreen.LevelListener" />
        <variable
            name="levelInfo"
            type="kotlin.Pair&lt;String, com.example.memory_app.domain.model.Difficulty&gt;" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="@{() -> clickListener.onClick(levelInfo.component1())}"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/level_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/test_level_icon" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{levelInfo.component1()}"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="Test level"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{@string/number_of_cards(Integer.toString(levelInfo.component2().numberOfCards))}"
                    android:textSize="15sp"
                    tools:text="number of cards : 999"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{@string/cards_in_row(Integer.toString(levelInfo.component2().cardsInRow))}"
                    android:textSize="15sp"
                    tools:text="cards in row : 2"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>