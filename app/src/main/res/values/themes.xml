<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Memoryapp" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- text, icon color -->
        <item name="colorOnPrimary">@color/primaryLightColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!-- background card color -->
        <item name="colorOnSecondary">@color/secondaryLightColor</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/secondaryLightColor</item>
        <item name="colorOnSurface">@color/secondaryLightColor</item>
        <item name="alertDialogStyle">@style/dialogStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button</item>
    </style>
</resources>